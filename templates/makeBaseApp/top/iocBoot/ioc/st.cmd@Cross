#!../../bin/_ARCH_/_APPNAME_

< envPaths

cd "${TOP}"

#epicsEnvSet("EPICS_CA_ADDR_LIST","131.243.71.255")
#epicsEnvSet("EPICS_CA_AUTO_ADDR_LIST","YES")

